{
  "name": "michr-form-validation-lib",
  "version": "1.0.0",
  "description": "Library to help with html form validation.",
  "scripts": {
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check --watch",
    "test": "tape -r ts-node/register/transpile-only test/src/**/*.test.ts test/src/*.test.ts|tap-mocha-reporter tap",
    "test:watch": "node watch.js",
    "coverage": "nyc tape -r ts-node/register/transpile-only test/**/*.test.ts",
    "build": "npm run build:types && npm run build:js",
    "build:types": "tsc --emitDeclarationOnly",
    "build:js": "babel src --out-dir dist --extensions \".ts,.tsx\" --source-maps inline"
  },
  "author": {
    "name": "MICHR",
    "email": "michr-developer@umich.edu"
  },
  "license": "MIT",
  "keywords": [],
  "devDependencies": {
    "@babel/core": "^7.20.2",
    "@babel/node": "^7.20.2",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-typescript": "^7.18.6",
    "@types/tape": "^4.13.2",
    "md5": "^2.3.0",
    "nyc": "^15.1.0",
    "tap-mocha-reporter": "^5.0.3",
    "tape": "^5.6.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  }
}
