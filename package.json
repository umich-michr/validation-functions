{
  "name": "@umich-michr/validation-functions",
  "main": "dist/index.js",
  "version": "1.0.0",
  "description": "Library to help with html form validation.",
  "scripts": {
    "commit": "npx cz",
    "commitlint:last": "npx commitlint --from HEAD~1 --to HEAD --verbose",
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check --watch",
    "type-check:test": "tsc --noEmit --esModuleInterop --target es6 --moduleResolution node test/**/*.ts",
    "clean": "npx shx rm -rf test-results .nyc_output build dist *validation-functions*.tgz",
    "eslint": "npx eslint \"main/**/*\"",
    "test": "tape -r ts-node/register/transpile-only test/src/**/*.test.ts test/src/*.test.ts|colortape|tap-mocha-reporter tap",
    "test:junit": "tape -r ts-node/register/transpile-only test/src/**/*.test.ts test/src/*.test.ts | tap-junit --output test-results/test",
    "test:watch": "node watch.js",
    "coverage": "nyc tape -r ts-node/register/transpile-only test/src/**/*.test.ts test/src/*.test.ts",
    "prebuild": "npm run prettier && npm run eslint && npm run clean && npm run type-check:test",
    "build": "npm run build:types && npm run build:js",
    "build:types": "npx tsc",
    "build:js": "npx babel main/src --out-dir dist --extensions \".ts,.tsx\" --source-maps inline",
    "package": "npm run build && npm pack",
    "prepare": "husky install",
    "prettier": "npx prettier --write \"./main/**/*.{ts,tsx}\" \"./test/**/*.{ts,tsx}\""
  },
  "author": {
    "name": "MICHR",
    "email": "michr-developer@umich.edu"
  },
  "license": "MIT",
  "keywords": [],
  "devDependencies": {
    "@babel/cli": "^7.19.3",
    "@babel/core": "^7.20.5",
    "@babel/eslint-plugin": "^7.19.1",
    "@babel/node": "^7.20.5",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-typescript": "^7.18.6",
    "@commitlint/config-conventional": "^17.3.0",
    "@types/tape": "^4.13.2",
    "@typescript-eslint/eslint-plugin": "^5.45.1",
    "@typescript-eslint/parser": "^5.45.1",
    "colortape": "^0.1.2",
    "commitizen": "^4.2.6",
    "commitlint": "^17.3.0",
    "cz-git": "^1.4.0",
    "eslint": "^8.29.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.2",
    "md5": "^2.3.0",
    "nyc": "^15.1.0",
    "prettier": "^2.8.0",
    "shx": "^0.3.4",
    "tap-junit": "^5.0.2",
    "tap-mocha-reporter": "^5.0.3",
    "tape": "^5.6.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3"
  }
}
